@model Ouvidoria.Models.Solicitacao
@{
    ViewData["Title"] = "Abrir uma Solicitação";
}
<div class="text-body">
    <div class="text-center">
        <h3>Nova Solicitação</h3>
    </div>
    <hr />
    <form asp-action="Cadastro">
        <div class="form-row">
            <div class="form-group col-md-8">
                <label asp-for="Nome"></label>
                <input type="text" class="form-control" asp-for="Nome">
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Celular"></label>
                <input type="tel" class="form-control" asp-for="Celular">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Perfil.TipoPerfil"></label>
                <select asp-for="PerfilId" class="form-control" asp-items="ViewBag.Perfis"></select>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="TipoSolicitacoes.Tipo"></label>
                <select asp-for="TipoSolicitacaoId" class="form-control" asp-items="ViewBag.TipoSolicitacao"></select>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="Setor.Nome"></label>
                <select asp-for="SetorId" class="form-control" asp-items="ViewBag.Setores"></select>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="Polos.Campus"></label>
                <select asp-for="PoloId" class="form-control" asp-items="ViewBag.Polos"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="form-group">
                <label asp-for="Assunto"></label>
                <input type="text" asp-for="Assunto" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input type="email" class="form-control" asp-for="Email">
        </div>        
        <div class="form-group">
            <label asp-for="Curso">Curso (Opcional)</label>
            <input type="text" class="form-control" asp-for="Curso">
        </div>
        <div class="form-group">
            <label asp-for="Detalhes"></label>
            <textarea asp-for="Detalhes" class="form-control"></textarea>
        </div>
        <hr />
        <div class="text-center">
            <a class="btn btn-danger" asp-controller="Gestao" asp-action="Index">Voltar</a>
            <input type="submit" value="Cadastrar" class="btn btn-success">            
        </div>
    </form>
</div>